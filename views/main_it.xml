<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--tree view of the appointment model-->
 <record id="main_tree" model="ir.ui.view">
        <field name="name">confine.main_it.tree</field>
        <field name="model">confine.main_it</field>
        <field name="arch" type="xml">
             <tree> 
                 <field name="name_seq"/>
                 <field name="main_name" />  
              </tree>
        </field>
 </record>


<!--farm view of the appointment model-->

   <record id="main_form" model="ir.ui.view">
        <field name="name">confine.main_it.form</field>
        <field name="model">confine.main_it</field>
        <field name="arch" type="xml"> 
          <form string="unit">
         <sheet>
               <div class="oe_title">
                  <h1>
                     <field name="name_seq"/>
                  </h1>    
               </div>                    
               <group>
                    <field name="main_name"/>
                   
               </group>      
        </sheet>      
          </form>
        </field>
    </record>


    
   <!-- action of the pation menu-->
    <record id="action_main" model="ir.actions.act_window">
          <field name="name">Main</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">confine.main_it</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="context">{}</field>
          <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                   Creat your First Main!
             </p>
          </field>
    </record> 

   <menuitem id="confine_main_it" name="Main" parent="unit_root" action="action_main" sequence="1"/>
</odoo>