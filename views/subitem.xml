<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--tree view of the appointment model-->
 <record id="subitem_tree" model="ir.ui.view">
        <field name="name">confine.subitem.tree</field>
        <field name="model">confine.subitem</field>
        <field name="arch" type="xml">
             <tree> 
                 <field name="name_sen"/>
                 <field name="subitem_name" /> 
                  <field name="main_it_id" />  
              </tree>
        </field>
 </record>


<!--farm view of the appointment model-->

   <record id="subitem_form" model="ir.ui.view">
        <field name="name">confine.subitem.form</field>
        <field name="model">confine.subitem</field>
        <field name="arch" type="xml"> 
          <form string="unit">
         <sheet>
               <div class="oe_title">
                  <h1>
                     <field name="name_sen"/>
                  </h1>    
               </div>                    
               <group>
                    <field name="subitem_name"/>
                    <field name="main_it_id"/>
               </group>      
        </sheet>      
          </form>
        </field>
    </record>

    
   <!-- action of the pation menu-->
    <record id="action_subitem" model="ir.actions.act_window">
          <field name="name">Subitem</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">confine.subitem</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="context">{}</field>
          <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                   Creat your First Subitem!
             </p>
          </field>
    </record> 

   <menuitem id="confine_subitem" name="Subitem" parent="unit_root" action="action_subitem" sequence="2"/>
</odoo>