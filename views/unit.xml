<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--tree view of the appointment model-->
 <record id="unit_tree" model="ir.ui.view">
        <field name="name">confine.unit.tree</field>
        <field name="model">confine.unit</field>
        <field name="arch" type="xml">
             <tree> 
                 <field name="name_seq"/>
                 <field name="un_name" />  
              </tree>
        </field>
 </record>


<!--farm view of the appointment model-->

   <record id="unit_form" model="ir.ui.view">
        <field name="name">confine.unit.form</field>
        <field name="model">confine.unit</field>
        <field name="arch" type="xml"> 
          <form string="unit">
         <sheet>
               <div class="oe_title">
                  <h1>
                     <field name="name_seq"/>
                  </h1>    
               </div>                    
               <group>
                    <field name="un_name"/>
                   
               </group>      
        </sheet>  

            <div class= "oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
            </div>   

          </form>
        </field>
    </record>

    
   <!-- action of the pation menu-->
    <record id="action_unit" model="ir.actions.act_window">
          <field name="name">Unit</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">confine.unit</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="context">{}</field>
          <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                   Creat your First Unit!
             </p>
          </field>
    </record> 

   <menuitem id="unit_root" name="Confine" sequence="0" web_icon="confine,static/description/icon.png"/>
    <menuitem id="confine_unit" name="Unit" parent="unit_root" action="action_unit" sequence="0" />
</odoo>